class Human(object):
338
    """
339
    human player
340
    """
341

342
    def __init__(self, board, player):
343
        self.board = board
344
        self.player = player
345

346
    def get_action(self):
347
        try:
348
            location = [int(n, 10) for n in input("Your move: ").split(",")]
349
            move = self.board.location_to_move(location)
350
        except Exception as e:
351
            move = -1
352
        if move == -1 or move not in self.board.availables:
353
            print("invalid move")
354
            move = self.get_action()
355
        return move
356

357
    def __str__(self):
358
        return "Human"
